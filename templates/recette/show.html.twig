{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12 col-md-6">
            <img src="{{ asset('uploads/recettes/' ~ recette.image) }}" width="100%">
        </div>
        <div class="col-12 col-md-6">
            <h2 class="mb-5">{{ recette.name }}</h2>

            {% if recette.author %}
                <p>Créée par {{ recette.author }}</p>
            {% else %}
                <p>Pas d'auteur</p>
            {% endif %}

            <div class="row">

            </div>
            <p><i>{{ recette.teaser }}</i></p>
            <p>{{ recette.body }}</p>

            <hr>
            {% if recette.ingredients|length > 0 %}
            <p>Ingredients</p>
            <ul>
                {% for ing in recette.ingredients %}
                    <li>{{ ing.name }}</li>
                {% endfor %}
            </ul>
            {% else %}
                <p><i>Pas d'ingrédients</i></p>
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            {% for comment in recette.comments %}
                {% include 'comment/show.html.twig' %}
            {% else %}
                Aucun commentaire
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {% include 'comment/_form.html.twig' %}
        </div>
    </div>

<div class="row mt-4">
    <div class="col-6">
        <a class="btn btn-primary" href="{{ path('recette_index') }}">Retour à la liste</a>
    </div>
    <div class="col-6">
        <a class="btn btn-outline-primary" href="{{ path('recette_edit', {'id': recette.id}) }}">Modifier</a>
    </div>
</div>


{% endblock %}
